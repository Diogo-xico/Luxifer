@model WebApplication1.Models.Cliente

@{
    ViewData["Title"] = "Details";
}
<style>
    #map {
        height: 350px;
    }

</style>
<body>
    <div class="container">
        <aside id="sidebar">
            <div class="top">
                <div class="logo">
                    <img src="/images/logo.png" alt="" />
                    <h2>LUX<span class="color-primary">IFER</span></h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-icons-sharp"> close </span>
                </div>
            </div>
            <div class="sidebar">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="material-icons-sharp"> dashboard </span>
                    <h3>Dashboard</h3>
                </a>
                <a asp-area="" asp-controller="Clientes" asp-action="Index" class="active">
                    <span class="material-icons-sharp"> groups </span>
                    <h3>Clientes</h3>
                </a>
                <a asp-area="" asp-controller="Luminarias" asp-action="Index">
                    <span class="material-icons-sharp"> lightbulb </span>
                    <h3>Luminárias</h3>
                </a>
                <a asp-area="" asp-controller="Grupos" asp-action="Index">
                    <span class="material-icons-sharp"> lightbulb </span>
                    <h3>Grupos</h3>
                </a>
                <a asp-area="" asp-controller="Help" asp-action="Index">
                    <span class="material-icons-sharp"> help </span>
                    <h3>Help Center</h3>
                </a>
                <a asp-area="" asp-controller="Settings" asp-action="Index">
                    <span class="material-icons-sharp"> settings </span>
                    <h3>Settings</h3>
                </a>
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="material-icons-sharp"> logout </span>
                    <h3>Logout</h3>
                </a>
            </div>
        </aside>
        <main>
            <div class="headerClientes">
                <h1>Detalhes de Cliente</h1>
                <button class="modern-button"><span class="material-icons-sharp"> lightbulb </span><a asp-area="" asp-controller="Luminarias" asp-action="Create" asp-route-id="@Model?.Id"><h2>Adicionar Luminária</h2></a></button>
            </div>
            <div class="cliente-info">

                <div class="cliente">
                    <div class="profile-photo1">
                        <img src="/images/foto.jpeg" alt="" />
                    </div>

                    <div class="info">

                        <h1>@Html.DisplayFor(model => model.Nome)</h1>
                    </div>
                    <div class="info">
                        <h2>@Html.DisplayNameFor(model => model.Email):</h2>
                        <h2>@Html.DisplayFor(model => model.Email)</h2>
                    </div>
                    <div class="info">
                        <h2>@Html.DisplayNameFor(model => model.Telefone):</h2>
                        <h2>@Html.DisplayFor(model => model.Telefone)</h2>
                    </div>

                </div>

            </div>
            <div>
                <button class="modern-button1"><span class="material-icons-sharp"> edit </span><a asp-action="Edit" asp-route-id="@Model?.Id"><h2>Editar Cliente</h2></a></button>
                <a asp-action="Index">Back to List</a>
            </div>

            <div id="map"></div>

          </main>

        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-icons-sharp">menu</span>
                </button>
                <div class="theme-toggler">
                    <span class="material-icons-sharp active">light_mode</span>
                    <span class="material-icons-sharp">dark_mode</span>
                </div>
                <div class="profile">
                    <div class="info">
                        <p>Olá, <b>Diogo</b></p>
                        <small class="text-muted">Admin</small>
                    </div>
                    <div class="profile-photo">
                        <img src="./images/foto.jpeg" alt="" />
                    </div>
                </div>
            </div>

            <div class="estatisticas">
                <div class="header">
                    <h1>Luminárias</h1>
                    <a href="#">More<span class="material-icons-sharp">chevron_right</span></a>
                </div> 
                
  
            
                <div class="estatistica">

                    <span class="material-icons-sharp"> lightbulb </span>
                    <h4>LAMP7818181</h4>
                    <h4></h4>
                    <div class="date-time">
                        <h4>Latitude</h4>
                        <small class="text-muted">31312312</small>
                    </div>
                    <div class="date-time">
                        <h4>Longitude</h4>
                        <small class="text-muted">312312</small>
                    </div>
                    <div class="date-time">
                        <p>Estado</p>
                        <small class="text-muted">Ativa</small>
                    </div>
                </div>
                <div class="estatistica">

                    <span class="material-icons-sharp"> lightbulb </span>
                    <h4>LAMP7818181</h4>
                    <h4></h4>
                    <div class="date-time">
                        <h4>Latitude</h4>
                        <small class="text-muted">31312312</small>
                    </div>
                    <div class="date-time">
                        <h4>Longitude</h4>
                        <small class="text-muted">312312</small>
                    </div>
                    <div class="date-time">
                        <p>Estado</p>
                        <small class="text-muted">Ativa</small>
                    </div>
                </div>

            </div>
        </div>
    </div>

        <script src="./index.js"></script>
    <script src="~/js/mapa.js" asp-append-version="true"></script>

</body>