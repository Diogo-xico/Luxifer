
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<script src="https://kit.fontawesome.com/c4254e24a8.js"
        crossorigin="anonymous"></script>
  
<body>
    <div class="container">
        <div class="form-box">
            <h1 id="title">Entrar</h1>
            <form>
                <div class="input-group">
                    <div class="input-field" id="nameField">
                        <i class="fa-solid fa-user"></i>
                        <input type="text" placeholder="Nome" />
                    </div>

                    <div class="input-field">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="email" placeholder="Email" />
                    </div>

                    <div class="input-field">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" placeholder="Password" />
                    </div>
                    <p>Esqueceu sua senha? <a href="#">Clica Aqui!</a></p>
                </div>
                <div class="btn-field">
                    <button type="button" id="signupBtn">Entrar</button>
                    <button type="button" id="signinBtn" class="disable">
                        Inscreva-se
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let signupBtn = document.getElementById("signupBtn");
        let signinBtn = document.getElementById("signinBtn");
        let nameField = document.getElementById("nameField");
        let title = document.getElementById("title");

        signinBtn.onclick = function () {
            nameField.style.maxHeight = "0";
            title.innerHTML = "Inscreva-se";
            signupBtn.classList.add("disable");
            signinBtn.classList.remove("disable");
        };

        signupBtn.onclick = function () {
            nameField.style.maxHeight = "60px";
            title.innerHTML = "Entrar";
            signupBtn.classList.remove("disable");
            signinBtn.classList.add("disable");
        };
    </script>
</body>


